pipeline {
    agent any

    stages {
        stage('Login') {
            steps {
                sh """
                    echo "Logging in to system..."
                  
                """
            }
        }

        stage('Build') {
            steps {
                sh """
                    echo "Building the project..."
                   
                """
            }
        }

        stage('Deploy') {
            steps {
                sh """
                    echo "Deploying the project..."
                   
                """
            }
        }
    }

   
}
